<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RatingBar
        android:id="@+id/list_item_food_review_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:padding="4dp"
        android:progressTint="@color/colorPrimaryDark"
        android:stepSize="0.1"/>

    <TextView
        android:id="@+id/list_item_food_corner_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/list_item_food_review_rating_bar"
        android:layout_toRightOf="@id/list_item_food_review_rating_bar"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_food_review_rating_bar"
        android:padding="4dp"/>
</RelativeLayout>