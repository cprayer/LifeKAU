<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginTop="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/grade_list_border">

    <TextView
        android:id="@+id/list_item_grade_subject_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="0.3"
        android:text="Introduction to International Relations"
        android:textSize="12sp"
        android:textColor="@color/grade_list_text"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/list_item_grade_professor_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:layout_weight="0.25"
        android:text="칼훈 앤드류 데이비드"
        android:textSize="12sp"
        android:textColor="@color/grade_list_text"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/list_item_grade_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:layout_weight="0.2"
        android:text="전필"
        android:textSize="12sp"
        android:textColor="@color/grade_list_text"/>
    <TextView
        android:id="@+id/list_item_grade_credits"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:layout_weight="0.125"
        android:text="3"
        android:textSize="12sp"
        android:textColor="@color/grade_list_text"/>
    <TextView
        android:id="@+id/list_item_grade_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:layout_weight="0.125"
        android:text="A+"
        android:textSize="12sp"
        android:textColor="@color/grade_list_grade"/>
</LinearLayout>