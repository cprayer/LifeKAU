<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/grade_list_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_accumulated_grade_summary_semester"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical"
        android:text="2013년도/1학기"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_accumulated_grade_summary_registered_credits"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="20"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_accumulated_grade_summary_acquired_credits"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:text="20"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_accumulated_grade_summary_total_grades"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:text="90"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_accumulated_grade_summary_GPA"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:text="4.5"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />
</LinearLayout>