<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_scholarship_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="장학 종류"
            android:textSize="12pt"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_scholarship_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/list_item_scholarship_amount"
                android:layout_margin="2dp"
                android:text="2018년도 1학기"
                android:textSize="5pt"/>

            <TextView
                android:id="@+id/list_item_scholarship_categorization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/list_item_scholarship_amount"
                android:layout_margin="2dp"
                android:layout_toEndOf="@id/list_item_scholarship_semester"
                android:text="교내장학"
                android:textSize="5pt"/>

            <TextView
                android:id="@+id/list_item_scholarship_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="5,000,000원"
                android:textSize="8pt"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>