<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/list_item_lecture_review_rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:progressTint="@color/yellow"
                android:rating="5"
                android:stepSize="0.1"/>

            <TextView
                android:id="@+id/list_item_lecture_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="4dp"
                android:text="1분 전"/>
        </LinearLayout>

        <TextView
            android:id="@+id/list_item_lecture_comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_lecture_review_rating_bar"
            android:padding="4dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>