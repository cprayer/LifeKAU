<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/grade_list_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_current_grade_course_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Introduction to International Relations"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_current_major"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:text="전필"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_current_grade_credits"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:text="3"
        android:textColor="@color/grade_list_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_item_current_grade_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:text="A+"
        android:textSize="12sp" />
</LinearLayout>